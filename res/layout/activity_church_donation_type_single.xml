<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ChurchDonationTypeSingle" >


    
        <RelativeLayout
        android:id="@+id/myTopLayout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/donoorange" >

        <TextView
            android:id="@+id/howmuchtop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="@string/how_much_donate"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/location_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/howmuchtop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>
    
    <EditText
        android:id="@+id/editText1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myTopLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText1"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/editText1"
        android:text="@string/dollar_sign"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button1"
        style="@style/DonoGreenStyle"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:background="@drawable/dono_button_green"
        android:onClick="onContinueButtonClicked"
        android:text="@string/pay_string" />

    <RelativeLayout
        android:layout_width="287dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/quickOne"
            style="@style/DonoBlueStyle"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="0dp"
            android:background="@drawable/dono_button_blue"
            android:onClick="onQuickOne"
            android:text="@string/fifty_string" />

        <Button
            android:id="@+id/quickFour"
            style="@style/DonoBlueStyle"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/dono_button_blue"
            android:onClick="onQuickFour"
            android:text="@string/two_hundred_string" />

        <Button
            android:id="@+id/quickTwo"
            style="@style/DonoBlueStyle"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/quickOne"
            android:background="@drawable/dono_button_blue"
            android:onClick="onQuickTwo"
            android:text="@string/seventyfive_string" />

        <Button
            android:id="@+id/quickThree"
            style="@style/DonoBlueStyle"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/quickTwo"
            android:background="@drawable/dono_button_blue"
            android:onClick="onQuickThree"
            android:text="@string/hundred_string" />

        <TextView
            android:id="@+id/titleTextTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/quick_donate"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

</RelativeLayout>