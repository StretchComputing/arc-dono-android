<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
       
    <TextView
        android:id="@+id/p_total_payment"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/p_date"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:text="45653.00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/green"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/donation_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/p_total_payment"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:maxWidth="30dp"
        android:text="Isis Lab Testing"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/p_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/donation_description"
        android:layout_below="@+id/donation_description"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="15dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/p_date"
        android:layout_centerHorizontal="true" >

    </RelativeLayout>

</RelativeLayout>
