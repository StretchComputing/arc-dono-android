<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/donation_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/check_image"
        android:maxWidth="30dp"
        android:text="Isis Lab Testing"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/check_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/donation_description"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/blue_check" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="7dp"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/donation_description"
        android:layout_marginLeft="90dp" >

    </RelativeLayout>

</RelativeLayout>
