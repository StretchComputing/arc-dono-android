<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecurringDonationInitial" >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <RelativeLayout
        android:id="@+id/toporange"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/donoorange" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/my_default_string"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toporange"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="26dp"
        android:text="@string/recurring_step_one"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:onClick="weeklyClicked"
        android:text="@string/weekly_text"
        android:textColor="@color/blue"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="37dp"
        android:gravity="center"
        android:text="@string/weekly_help_text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/darkerGray"
        android:textSize="12sp" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView3"
        android:background="@android:color/transparent"
        android:onClick="monthlyClicked"
        android:text="@string/monthly_text"
        android:textColor="@color/blue"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/Button01"
        android:layout_alignTop="@+id/Button01"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="37dp"
        android:gravity="center"
        android:text="@string/monthly_help_text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/darkerGray"
        android:textSize="12sp" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView01"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:onClick="xOfMonthClicked"
        android:text="@string/x_of_month_string"
        android:textColor="@color/blue"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/Button02"
        android:layout_alignTop="@+id/Button02"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="37dp"
        android:gravity="center"
        android:text="@string/x_of_month_help_string"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/darkerGray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/TextView02"
        android:layout_marginTop="10dp"
        android:text="@string/recurring_step_two"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp" />
    
    <Spinner
        android:id="@+id/planets_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView03"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="10dp" />
    
      <Spinner
        android:id="@+id/main_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/planets_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="10dp" />
      
       <TextView
        android:id="@+id/sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/main_spinner"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/x_of_month_help_string"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/darkerGray"
        android:textSize="12sp" />
       
    <Button
        android:id="@+id/button2"
        style="@style/DonoOrangeStyle"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/dono_button_orange"
        android:onClick="onContinueClicked"
        android:text="@string/continueString" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignTop="@+id/button1"
        android:layout_marginTop="10dp"
        android:src="@drawable/blue_check" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/Button01"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_marginBottom="5dp"
        android:src="@drawable/blue_check" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/ImageView01"
        android:layout_alignTop="@+id/Button02"
        android:layout_marginTop="15dp"
        android:src="@drawable/blue_check" />

</RelativeLayout>